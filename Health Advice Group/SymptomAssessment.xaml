                    <CheckBox Name="CB_BloodPressureFluctuations" Content="Blood Pressure Fluctuations"/>
                </ListBox>
                <Button Name="btn_next" Style="{DynamicResource RoundedButtonStyle}" Content="Next" HorizontalAlignment="Center" Margin="0,481,0,0" Width="74" BorderBrush="#FF112D4E" BorderThickness="2,2,2,2" Foreground="#FF3F72AF" FontFamily="Yu Gothic" FontWeight="Bold" FontSize="14" Background="White" Height="30" VerticalAlignment="Top"/>
